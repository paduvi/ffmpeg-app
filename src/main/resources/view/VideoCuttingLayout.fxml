<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #e9ebee;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chotoxautinh.controller.VideoCuttingController">
