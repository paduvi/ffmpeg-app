        <right>
            <VBox prefWidth="450.0" BorderPane.alignment="CENTER">
                <StackPane prefWidth="450.0" prefHeight="270.0" VBox.vgrow="NEVER">
                    <ImageView fx:id="previewImg" fitHeight="270.0" fitWidth="450.0" preserveRatio="true">
                        <Image url="@../img/sample.png"/>
                    </ImageView>
                </StackPane>
                <TableView fx:id="tableView" editable="true" focusTraversable="false" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="selectColumn" prefWidth="50.0" resizable="false" sortable="false" styleClass="selectColumn" />
                        <TableColumn fx:id="nameColumn" editable="false" prefWidth="300.0" resizable="false" sortable="false" text="Name" />
                        <TableColumn fx:id="actionColumn" prefWidth="100.0" resizable="false" sortable="false" />
                    </columns>
                </TableView>
            </VBox>
        </right>
    </BorderPane>
</AnchorPane>
